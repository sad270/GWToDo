{% extends "GWToDoBundle::layout.html.twig" %}
{% block description %}{{ parent() }}{% endblock %}
{% block title %}{{ parent() }} - Index{% endblock %}
{% block container %}
<ul class="list-unstyled">
  <li>
    <a href="{{ path('gw_to_do_project_add') }}" role="button" class="btn btn-primary btn-lg btn-block well">Nouveau Projet</a>
  </li>
    {% for project in results %}
      <li>
        <div class="well">
          <h2>{{ project.title }}</h2>
          <p>
            <a class="btn btn-info" href="{{ path('gw_to_do_project_view', {'id': project.id}) }}" role="button"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Voir</a>
            <a class="btn btn-primary" href="{{ path('gw_to_do_project_edit', {'id': project.id}) }}" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifier</a>
            <a class="btn btn-danger pull-right" href="{{ path('gw_to_do_project_delete', {'id': project.id}) }}" role="button"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Supprimer</a>
          </p>
        </div>
      </li>
    {% else %}
      <li>
        <div class="well">
          <h2>Aucun Projet</h2>
          <p>Veuillez cliquer sur le bouton "Nouveau Projet" pour ajouter une Projet</p>
        </div>
      </li>
    {% endfor %}
</ul>
{% endblock %}
