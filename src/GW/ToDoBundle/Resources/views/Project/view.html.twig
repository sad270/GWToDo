{% extends "GWToDoBundle::layout.html.twig" %}
{% block description %}{{ parent() }}{% endblock %}
{% block title %}{{ parent() }} - Index{% endblock %}
{% block container %}
  <div class="jumbotron">
    <h1>{{ project.title }}</h1>
    <h2>Liste des ToDos :</h2>
    <ul>
      <li class="list-unstyled">
        <a class="btn btn-primary" href="{{ path('gw_to_do_add', {'project': project.id}) }}" role="button"> Assigné un nouveau ToDo à ce Projet</a>
      </li>
      {% for todo in project.todos %}
        <li>
          <a href="{{ path('gw_to_do_view', {'id': todo.id}) }}">{{ todo.title }} ( {{ todo.expiration | date('d/m/Y')}})</a>
        </li>
      {% else %}
      <li>
        Aucun ToDos assigné à ce projet, cliquer sur le bouton "Assigné un nouveau ToDo à ce Projet" pour en ajouter un.
      </li>
      {% endfor %}
    </ul>
    <p>
      <a class="btn btn-primary" href="{{ path('gw_to_do_edit', {'id': project.id}) }}" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifier</a>
      <a class="btn btn-danger pull-right" href="{{ path('gw_to_do_delete', {'id': project.id}) }}" role="button"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Supprimer</a>
    </p>
  </div>
{% endblock %}
