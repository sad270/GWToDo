{% extends "GWToDoBundle::layout.html.twig" %}
{% block description %}{{ parent() }}{% endblock %}
{% block title %}{{ parent() }} - Index{% endblock %}
{% block container %}
<ul class="list-unstyled">
  <li>
    <a href="{{ path('gw_to_do_add') }}" role="button" class="btn btn-primary btn-lg btn-block well">Nouveau ToDo</a>
  </li>
    {% for todo in results %}
      <li>
        <div class="well">
          <h2>{{ todo.title }} <span class="text-normal pull-right">Expire le :<br>{{ todo.expiration | date('d/m/Y') }}</span></h2>
          <p><a href="{{ path('gw_to_do_project_view', {'id': todo.project.id}) }}" >Projet : {{ todo.project.title }}</a></p>
          <p>
            <a class="btn btn-info" href="{{ path('gw_to_do_view', {'id': todo.id}) }}" role="button"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Voir</a>
            <a class="btn btn-primary" href="{{ path('gw_to_do_edit', {'id': todo.id}) }}" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifier</a>
            <a class="btn btn-danger pull-right" href="{{ path('gw_to_do_delete', {'id': todo.id}) }}" role="button"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Supprimer</a>
          </p>
        </div>
      </li>
    {% else %}
      <li>
        <div class="well">
          <h2>Aucun ToDo</h2>
          <p>Veuillez cliquer sur le bouton "Nouveau ToDo" pour ajouter une ToDo</p>
        </div>
      </li>
    {% endfor %}
</ul>
{% endblock %}
