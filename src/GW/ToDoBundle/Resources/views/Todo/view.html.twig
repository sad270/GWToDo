{% extends "GWToDoBundle::layout.html.twig" %}
{% block description %}{{ parent() }}{% endblock %}
{% block title %}{{ parent() }} - Index{% endblock %}
{% block container %}
  <div class="jumbotron">
    <h1>{{ todo.title }} <span class="text-normal pull-right">Expire le :<br>{{ todo.expiration | date('d/m/Y') }}</span></h1>
    <p><a href="{{ path('gw_to_do_project_view', {'id': todo.project.id}) }}" >Projet : {{ todo.project.title }}</a></p>
    <p>{{ todo.content }}</p>
    <p>le ou les Mots les plus utilis√© :</p>
    <ul>
      {% for word in getMostUsed(todo) %}
      <li>
        {{ word }}
      </li>
      {% else %}
      <li>
        Une erreur est survenue.
      </li>
      {% endfor %}
    </ul>
    <p>
      <a class="btn btn-primary" href="{{ path('gw_to_do_edit', {'id': todo.id}) }}" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifier</a>
      <a class="btn btn-danger pull-right" href="{{ path('gw_to_do_delete', {'id': todo.id}) }}" role="button"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Supprimer</a>
    </p>
  </div>
{% endblock %}
